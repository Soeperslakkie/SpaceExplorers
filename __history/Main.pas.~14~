unit Main;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Explorer, Vcl.ExtCtrls;

type
  TMainForm = class(TForm)
    lblPlanet: TLabel;
    rgpDwarf: TRadioGroup;
    rgpMoon: TRadioGroup;
    rgpOther: TRadioGroup;
    rgpPlanet: TRadioGroup;
    procedure btnLogClick(Sender: TObject);
    procedure btnAccountClick(Sender: TObject);

  private
    { Private declarations }
    bPass, bUser : Boolean;
    sPass, sUser : String;
  public
    { Public declarations }
  end;

var
  MainForm: TMainForm;

implementation

{$R *.dfm}


procedure TMainForm.btnAccountClick(Sender: TObject);
begin
  sUser := InputBox('Account Creation','Username?:', '');
  sPass := InputBox('Account Creation','Password?:', '');
end;

procedure TMainForm.btnLogClick(Sender: TObject);
begin

  if edtUser.Text = sUser then
   bUser := True;

  if edtPass.Text = sPass then
   bPass := True;

  if edtUser.Text = '' then
  begin
   bUser := False;
   ShowMessage('Please enter a Username');
  end;

  if edtPass.Text = '' then
  begin
   bPass := False;
   ShowMessage('Please enter a Password');
  end;

  if bPass and bUser = True then
   begin
    frmExplorer.Show;

   end else
    ShowMessage('Username or Password incorrect, if you have not made an account, first make one and try again')

end;

end.
